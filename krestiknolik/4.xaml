        <Button x:Name="ButtonL" Grid.Column="3" Grid.Row="2" Click="Button_Click_L" Content="                  " Background="Aquamarine"/>
        <Button x:Name="ButtonP" Grid.Column="3" Grid.Row="3" Click="Button_Click_P" Content="                    " Background="Aquamarine"/>
        <Button x:Name="Delete" Grid.Column="0" Grid.Row="4" Height="40" Content="Очистить поле" Click="Delete_Click"/>
        <Label x:Name="Lable2" Grid.Column="1" Grid.Row="4" Content=" "/>
