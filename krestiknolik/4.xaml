        <Button x:Name="ButtonI" Grid.Column="0" Grid.Row="2" Click="Button_Click_I" Content="      " Background="Aquamarine"/>
        <Button x:Name="ButtonM" Grid.Column="0" Grid.Row="3" Click="Button_Click_M" Content="       " Background="Aquamarine"/>
        <Button x:Name="ButtonF" Grid.Column="1" Grid.Row="1" Click="Button_Click_F" Content="        " Background="Aquamarine"/>
        <Button x:Name="ButtonJ" Grid.Column="1" Grid.Row="2" Click="Button_Click_J" Content="         " Background="Aquamarine"/>
        <Button x:Name="ButtonN" Grid.Column="1" Grid.Row="3" Click="Button_Click_N" Content="          " Background="Aquamarine"/>
